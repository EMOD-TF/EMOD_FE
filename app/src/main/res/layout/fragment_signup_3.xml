<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_input"
        android:layout_marginHorizontal="75dp"
        android:layout_marginTop="43.67dp"
        android:layout_marginBottom="66.67dp"
        android:paddingHorizontal="25.33dp"
        android:paddingVertical="66dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/step_3_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:background="@null"
            android:rotation="180" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/step_3_question"
                style="@style/extrabold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문"
                android:textColor="@color/black"
                android:textSize="26.67sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="43.33dp"/>

            <RadioGroup
                android:id="@+id/rgAnswers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Answer 1 -->
                <LinearLayout
                    android:id="@+id/row_answer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/radio_answer_1"
                        android:layout_width="33.33dp"
                        android:layout_height="33.33dp"
                        android:background="@drawable/radio"
                        android:button="@null" />
                    <Space
                        android:layout_width="22.67dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/tv_answer_1"
                        style="@style/bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="21.33sp"
                        android:text="답변1"/>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="37.33dp"/>

                <!-- Answer 2 -->
                <LinearLayout
                    android:id="@+id/row_answer_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/radio_answer_2"
                        android:layout_width="33.33dp"
                        android:layout_height="33.33dp"
                        android:background="@drawable/radio"
                        android:button="@null" />
                    <Space
                        android:layout_width="22.67dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/tv_answer_2"
                        style="@style/bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="21.33sp"
                        android:text="답변2"/>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="37.33dp"/>

                <!-- Answer 3 -->
                <LinearLayout
                    android:id="@+id/row_answer_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <RadioButton
                        android:id="@+id/radio_answer_3"
                        android:layout_width="33.33dp"
                        android:layout_height="33.33dp"
                        android:background="@drawable/radio"
                        android:button="@null" />
                    <Space
                        android:layout_width="22.67dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/tv_answer_3"
                        style="@style/bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#666666"
                        android:textSize="21.33sp"
                        android:text="답변3"/>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <ImageButton
            android:id="@+id/step_3_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:background="@null"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
