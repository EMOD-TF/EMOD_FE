<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="길동이의 감정 기록"
                    style="@style/extrabold"
                    android:textSize="32dp"
                    android:lineSpacingMultiplier="1.3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_normal_1"
                    android:orientation="vertical"
                    android:paddingVertical="32dp"
                    android:gravity="center">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:text="지금까지 일기 쓴 날"
                        android:layout_marginBottom="10dp"
                        style="@style/extrabold"
                        android:textSize="26.67sp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30일"
                        style="@style/extrabold"
                        android:textSize="65.33sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="131dp">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginBottom="34.67dp"
                android:gravity="center"
                android:text="길동이는 어떤 감정을 많이 느낄까요?"
                style="@style/extrabold"
                android:textSize="32dp"
                android:lineSpacingMultiplier="1.3"/>
            <FrameLayout
                android:id="@+id/emotionRankSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_lighthover"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingBottom="59dp"
                    android:gravity="center">
                    <TextView
                        android:textColor="@color/primary_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:text="감정 순위"
                        style="@style/extrabold"
                        android:layout_marginBottom="36dp"
                        android:textSize="32dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <include layout="@layout/item_emotion_rank"
                            android:id="@+id/item_slot_1" />
                        <Space
                            android:layout_width="76.43dp"
                            android:layout_height="0dp"/>
                        <include layout="@layout/item_emotion_rank"
                            android:id="@+id/item_slot_2" />
                        <Space
                            android:layout_width="76.43dp"
                            android:layout_height="0dp"/>
                        <include layout="@layout/item_emotion_rank"
                            android:id="@+id/item_slot_3" />
                    </LinearLayout>
                </LinearLayout>
                <Spinner
                    android:id="@+id/spinnerMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_spinner_month"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@drawable/bg_month_dropdown_panel"
                    android:dropDownWidth="wrap_content"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="131.67dp"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginBottom="24.67dp"
                android:gravity="center"
                android:text="길동이는 어떤 단어를 많이 사용할까요?"
                style="@style/extrabold"
                android:textSize="32dp"
                android:lineSpacingMultiplier="1.3"/>
            <com.example.widgets.WordCloudView
                android:id="@+id/wordCloud"
                android:layout_width="match_parent"
                android:layout_height="391dp"
                android:background="@drawable/bg_lightactive"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>