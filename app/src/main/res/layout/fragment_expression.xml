<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Diary.ExpressionFragment">

    <TextView
        android:id="@+id/img_chapter"
        android:layout_width="191dp"
        android:layout_height="53dp"
        android:background="@drawable/ic_chapter"
        android:text="표정 따라하기"
        style="@style/bold"
        android:textSize="27sp"
        android:gravity="center"
        android:layout_margin="89dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_emotion_word"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:text="속상할 땐,"
        android:textSize="47sp"
        android:textColor="#0080FF"
        style="@style/extrabold"
        android:layout_marginStart="89dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/img_chapter"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 표정을 지을까?"
        android:textSize="47sp"
        style="@style/extrabold"
        android:layout_marginStart="89dp"
        app:layout_constraintTop_toBottomOf="@id/tv_emotion_word"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">



    </FrameLayout>


    <ImageView
        android:id="@+id/emotion_character"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:src="@drawable/emotion_sad"
        android:layout_marginStart="89dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ment"/>

    <FrameLayout
        android:layout_width="700dp"
        android:layout_height="650dp"
        app:layout_constraintStart_toEndOf="@id/img_chapter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="242dp"
        android:layout_marginTop="50dp"
        >

        <FrameLayout
            android:layout_width="333dp"
            android:layout_height="100dp"
            android:elevation="20dp"
            android:layout_gravity="end"
            android:layout_marginStart="-30dp">

            <ImageView
                android:id="@+id/bg_speech_bubble"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_expression"/>

            <TextView
                android:id="@+id/tv_expression"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="얼굴 모양에\n길동이의 얼굴을 맞춰봐!"
                android:textSize="19sp"
                style="@style/extrabold"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="666dp"
            android:layout_height="580dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="666dp"
                android:layout_height="match_parent"
                android:src="@drawable/img_kid_face"
                android:elevation="4dp"/>

            <ImageView
                android:layout_width="391dp"
                android:layout_height="390dp"
                android:src="@drawable/bg_emotion_line"
                android:layout_gravity="center"
                android:elevation="4dp"/>

            <androidx.camera.view.PreviewView
                android:id="@+id/img_kid_expression"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </FrameLayout>

    </FrameLayout>

