<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="106dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_setting" />

            <Space
                android:layout_width="40dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/btn_exit_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_cancel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="142.67dp"
                android:layout_height="142.67dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_ch" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_btn_pencil"
                    android:elevation="2dp"
                    android:src="@drawable/btn_pencil" />
            </FrameLayout>

            <TextView
                style="@style/extrabold"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김멋사"
                android:textSize="24.89sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_diary_total_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:background="@drawable/bg_day_count"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/profile_layout">

            <TextView
                android:id="@+id/tv_diary_total_day"
                style="@style/extrabold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="지금까지 일기 쓴 날"
                android:textSize="26.67sp" />

            <TextView
                android:id="@+id/tv_day_count"
                style="@style/extrabold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0일"
                android:textSize="85.33sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_data_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_diary_total_day">

<!--            <Spinner-->
<!--                android:id="@+id/data_selector"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/bg_spinner"/>-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutWeek"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="주차 선택"
                >

                <AutoCompleteTextView
                    android:id="@+id/data_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:background="@drawable/bg_spinner" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/bg_orange_light_stroke_2"
            android:orientation="horizontal"
            android:paddingHorizontal="39dp"
            android:paddingTop="30dp"
            android:paddingBottom="22dp"
            app:layout_constraintTop_toBottomOf="@id/ll_data_selector"
            tools:listitem="@layout/rv_day_diary_item" />
        
        <TextView
            android:id="@+id/tv_recent_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 감정 일기"
            android:textSize="30sp"
            style="@style/extrabold"
            android:layout_marginTop="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_calendar"/>

        <LinearLayout
            android:id="@+id/ll_select_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_recent_diary"
            android:paddingTop="57dp"
            android:paddingBottom="47dp"
            android:paddingStart="73dp"
            android:paddingEnd="70dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_marginBottom="100dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_diary"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_emotion"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_lion_sad"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="35dp">

                    <TextView
                        android:id="@+id/tv_diary_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조금은 속상한 오늘"
                        android:textSize="33.33sp"
                        style="@style/extrabold"/>

                    <TextView
                        android:id="@+id/tv_diary_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025년 7월 9일"
                        android:textSize="32sp"
                        android:textColor="#7F7F7F"/>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_diary_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/recent_diary_content"
                android:layout_marginTop="75dp"
                android:textSize="26sp"
                style="@style/bold"
                android:lineSpacingMultiplier="1.5"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>