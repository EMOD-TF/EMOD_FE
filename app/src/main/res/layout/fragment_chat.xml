<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Diary.ChatFragment">

    <ImageView
        android:id="@+id/img_character"
        android:layout_width="215dp"
        android:layout_height="284dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="82dp"
        android:src="@drawable/lion_character_4x"
        android:layout_marginBottom="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_btn"/>
    
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="339dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_again"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_again"
            android:text="답변 다시하기"
            android:textSize="20sp"
            android:layout_marginEnd="13dp"
            android:layout_weight="1"
            style="@style/bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish"
            style="@style/bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="13dp"
            android:layout_weight="1"
            android:background="@drawable/btn_finish"
            android:enabled="false"
            android:text="답변 끝내기"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ic_turnoff"
            android:layout_width="66.67dp"
            android:layout_height="66.67dp"
            android:src="@drawable/ic_turnoff"
            android:background="@android:color/transparent"
            android:layout_marginBottom="66dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_chat_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="27sp"
        style="@style/bold"
        android:textAlignment="textStart"
        android:visibility="invisible"
        android:lineSpacingMultiplier="1.3"
        android:background="@drawable/bg_chat_character"
        android:layout_marginTop="38dp"
        android:layout_marginStart="113dp"
        android:paddingVertical="24dp"
        android:paddingHorizontal="27dp"
        android:maxWidth="520dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar"/>

    <TextView
        android:id="@+id/tv_chat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="27sp"
        style="@style/bold"
        android:textAlignment="textStart"
        android:visibility="invisible"
        android:lineSpacingMultiplier="1.3"
        android:background="@drawable/bg_chat_user"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="46.67dp"
        android:paddingVertical="24dp"
        android:paddingHorizontal="27dp"
        android:maxWidth="520dp"
        app:layout_constraintEnd_toStartOf="@id/fl_camera"
        app:layout_constraintTop_toBottomOf="@id/bar"/>

    <FrameLayout
        android:id="@+id/fl_camera"
        android:layout_width="480dp"
        android:layout_height="420dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="111dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_btn">

        <androidx.camera.view.PreviewView
            android:id="@+id/img_kid_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_kid_face"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_kid_face"/>


    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>