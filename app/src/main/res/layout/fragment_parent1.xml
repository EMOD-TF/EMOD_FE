<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <!-- 주차별 감정 이모티콘 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ▼▼▼ 주차 선택 헤더: id/foreground/clickable 추가 ▼▼▼ -->
            <LinearLayout
                android:id="@+id/weekSelectorLayout"
                android:layout_marginBottom="35dp"
                android:layout_width="wrap_content"
                android:paddingHorizontal="18.5dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/keypad_non_highlight"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <TextView
                    android:id="@+id/weekTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025년 8월 다섯째주"
                    style="@style/bold"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_orange_light_stroke_2"
                android:paddingVertical="22dp"
                android:paddingHorizontal="45dp"
                android:divider="@drawable/divider_horizontal_empty_52"
                android:showDividers="middle">
                <LinearLayout
                    android:id="@+id/sundayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/sundayDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="24"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/sundayDayText"
                        android:layout_width="22dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="일"
                        android:textSize="24sp"/>
                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_angry"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mondayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/mondayDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:textColor="#FFB108"
                        android:text="25"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/mondayDayText"
                        android:layout_width="22dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:textColor="#FFB108"
                        android:text="월"
                        android:textSize="24sp"/>
                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_sad"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tuesdayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tuesdayDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="26"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/tuesdayDayText"
                        android:layout_width="22dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="화"
                        android:textSize="24sp"/>
                    <ImageView
                        android:alpha="0.3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_happy"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wednesdayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/wednesdayDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="27"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/wednesdayDayText"
                        android:layout_width="22dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="수"
                        android:textSize="24sp"/>
                    <ImageView
                        android:alpha="0.3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_happy"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/thursdayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/thursdayDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="28"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/thursdayDayText"
                        android:layout_width="22dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="목"
                        android:textSize="24sp"/>
                    <ImageView
                        android:alpha="0.3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_happy"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fridayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/fridayDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="29"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/fridayDayText"
                        android:layout_width="22dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="금"
                        android:textSize="24sp"/>
                    <ImageView
                        android:alpha="0.3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_happy"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/saturdayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/saturdayDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="30"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/saturdayDayText"
                        android:layout_width="22dp"
                        android:layout_height="48dp"
                        android:gravity="center"
                        style="@style/extrabold"
                        android:text="토"
                        android:textSize="24sp"/>
                    <ImageView
                        android:alpha="0.3"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_happy"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

         <!-- 최근 감정 일기 -->
        <LinearLayout
            android:layout_marginTop="47dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginBottom="10dp"
                style="@style/extrabold"
                android:text="최근 감정 일기"
                android:textSize="32sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="55dp"
                android:paddingHorizontal="65dp"
                android:background="@drawable/bg_yellow_gradient"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/recentDiaryEmotionImageView"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_lion_happy"/>
                    <Space
                        android:layout_width="24dp"
                        android:layout_height="0dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/diaryTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            style="@style/extrabold"
                            android:textSize="33.33sp"
                            android:text="@string/diary_title_placeholder_1"/>
                        <TextView
                            android:id="@+id/diaryDateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center"
                            style="@style/extrabold"
                            android:textColor="#7F7F7F"
                            android:textSize="32sp"
                            android:text="2025년 7월 25일"/>
                    </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:id="@+id/diaryContentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    style="@style/extrabold"
                    android:lineHeight="53.3dp"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@string/diary_placeholder_1"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:src="@drawable/line_dash"/>

        <!-- 대처 방법 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginBottom="20dp"
                style="@style/extrabold"
                android:text="이렇게 대처해주세요!"
                android:textSize="32sp"
                android:gravity="center"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/diaryGuideTextView"
                    android:paddingVertical="25dp"
                    android:paddingLeft="150dp"
                    android:paddingRight="78dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.15"
                    android:lineHeight="53.3dp"
                    android:background="@drawable/bg_parent_explain"
                    android:layout_gravity="bottom"
                    style="@style/extrabold"
                    android:textSize="26.67sp"
                    android:text="@string/diary_guide_placeholder_1"/>
                <ImageView
                    android:layout_width="152.67dp"
                    android:layout_height="201.33dp"
                    android:src="@drawable/lion_character_4x"
                    android:scaleX="-1"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="12dp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>