<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Diary.ExpressionFragment">

    <TextView
        android:id="@+id/img_chapter"
        android:layout_width="191dp"
        android:layout_height="53dp"
        android:background="@drawable/ic_chapter"
        android:text="표정 따라하기"
        style="@style/bold"
        android:textSize="27sp"
        android:gravity="center"
        android:layout_margin="89dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_ment"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:text="기분이 속상할 땐,\n어떤 표정을 지을까?"
        android:textSize="47sp"
        style="@style/extrabold"
        android:layout_marginStart="89dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/img_chapter"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
        android:id="@+id/emotion_character"
        android:layout_width="333dp"
        android:layout_height="333dp"
        android:src="@drawable/emotion_character"
        android:layout_marginStart="89dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ment"/>

    <FrameLayout
        android:layout_width="666dp"
        android:layout_height="600dp"
        app:layout_constraintStart_toEndOf="@id/img_chapter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="242dp"
        android:layout_marginTop="67dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_kid_face"
            android:elevation="4dp"/>

        <androidx.camera.view.PreviewView
            android:id="@+id/img_kid_expression"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>