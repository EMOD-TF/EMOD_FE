<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle_normal_stroke_3">
        <ImageView
            android:id="@+id/iv_emotion_icon"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:src="@drawable/ic_lion_happy"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_emotion_label"
        android:layout_width="wrap_content"
        android:layout_height="53.82dp"
        android:gravity="center"
        style="@style/bold"
        android:textSize="24sp"
        android:text="기쁨"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_emotion_count"
        android:layout_width="wrap_content"
        android:layout_height="53.82dp"
        android:gravity="center"
        style="@style/extrabold"
        android:textSize="26.67sp"
        android:text="5"
        android:textColor="@color/black"/>
</LinearLayout>
