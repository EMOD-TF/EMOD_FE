<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="368.67dp"
    android:layout_height="80dp"
    android:background="@drawable/bg_segment_container"
    android:clipToPadding="false"
    android:clipToOutline="true"
    >


    <Switch
        android:id="@+id/segSwitch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:splitTrack="false"
        android:showText="false"
        android:thumb="@drawable/seg_thumb"
        app:track="@drawable/seg_track_transparent" />

    <LinearLayout
        android:id="@+id/labels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false">

        <TextView
            android:id="@+id/labelLeft"
            android:layout_width="89dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/extrabold"
            android:text="일기"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:id="@+id/labelRight"
            android:layout_width="89dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/extrabold"
            android:text="리포트"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#7F7F7F" />
    </LinearLayout>
</RelativeLayout>
