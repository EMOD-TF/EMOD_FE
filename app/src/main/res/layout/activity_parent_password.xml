<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="65dp"
    android:layout_marginBottom="75dp"
    >

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parent_password"
            android:textSize="25sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_password"
            android:paddingVertical="14dp"
            android:paddingHorizontal="32dp"
            android:showDividers="middle"
            android:divider="@drawable/empty_divider_width"
            >
            <View
                android:layout_width="2dp"
                android:layout_height="55dp"
                android:background="@color/primary_darker" />
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_pwd_input"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_pwd_input"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_pwd_input"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_pwd_input"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="false">

                <android.widget.Button android:id="@+id/keypad_1"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="1"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_highlight"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp"
                    />
                <android.widget.Button android:id="@+id/keypad_2"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="2"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_non_highlight"
                    />
                <android.widget.Button android:id="@+id/keypad_3"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="3"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_highlight"
                    android:layout_marginLeft="20dp"
                    />
                <android.widget.Button android:id="@+id/keypad_4"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="4"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_non_highlight"
                    android:layout_marginBottom="16dp"
                    />
                <android.widget.Button android:id="@+id/keypad_5"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="5"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_highlight"
                    />
                <android.widget.Button android:id="@+id/keypad_6"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="6"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_non_highlight"
                    android:layout_marginLeft="20dp"
                    />
                <android.widget.Button android:id="@+id/keypad_7"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="7"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_highlight"
                    />
                <android.widget.Button android:id="@+id/keypad_8"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="8"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_non_highlight"
                    />
                <android.widget.Button android:id="@+id/keypad_9"
                    style="@style/extrabold"
                    android:layout_width="153dp"
                    android:layout_height="100dp"
                    android:text="9"
                    android:textSize="26.67dp"
                    android:background="@drawable/keypad_highlight"
                    android:layout_marginLeft="20dp"
                    />
            </GridLayout>
            <android.widget.Button android:id="@+id/keypad_0"
                style="@style/extrabold"
                android:layout_width="153dp"
                android:layout_height="100dp"
                android:text="0"
                android:textSize="26.67dp"
                android:background="@drawable/keypad_highlight"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/password_submit"
        style="@style/extrabold"
        android:layout_width="153dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/keypad_non_highlight"
        android:text="입력하기"
        android:textSize="26.67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/password_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>